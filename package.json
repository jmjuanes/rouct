{
    "name": "rouct",
    "description": "Micro client-side router component for React",
    "version": "0.1.1",
    "license": "MIT",
    "author": "Josemi Juanes <josemijuanes@gmail.com>",
    "repository": "https://github.com/jmjuanes/rouct",
    "bugs": "https://github.com/jmjuanes/rouct/issues",
    "main": "index.js",
    "keywords": [
        "react",
        "router",
        "client",
        "route",
        "routes"
    ],
    "dependencies": {
        "react": "^16.3.0"
    },
    "devDependencies": {
        "react-dom": "^16.3.0",
        "rollup": "^0.57.1",
        "rollup-plugin-commonjs": "^9.1.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-uglify": "^3.0.0"
    },
    "scripts": {
        "build": "npm run build:dev && npm run build:prod",
        "build:dev": "./node_modules/.bin/rollup -c rollup.config.js --environment NODE_ENV:development",
        "build:prod": "./node_modules/.bin/rollup -c rollup.config.js --environment NODE_ENV:production",
        "test": "npm run build:dev"
    }
}
